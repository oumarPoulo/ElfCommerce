{
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "no-unused-vars": 0,
    "max-len": [
      2,
      {
        "code": 120
      },
      {
        "ignoreComments": true
      }
    ],
    "indent": [2, 2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "class-methods-use-this": 0,
    "import/no-named-as-default": 0,
    "comma-dangle": [2, "always-multiline"],
    "func-names": [2, "never"]
  }
}
